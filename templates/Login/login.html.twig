{# templates/login/login.html.twig #}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/styleLogin.css') }}">
    <title>Login</title>
    <style>
        body {
            background-image: url('https://st2.depositphotos.com/1686288/8820/i/450/depositphotos_88209126-stock-photo-beautiful-colorful-blur-background.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
</head>
<body>
    <div class="container{{ state == 'register' ? ' active' }}" id="container">
        <div class="form-container sign-up">
            <form method="post" novalidate>
                {{ form_start(registerForm) }}
                <h2>Créer un compte</h2>
                <div class="row">
                    <div class ="col-6">
                        {{ form_widget(registerForm.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
                        <span class="text-danger" style="font-size:12px;">{{ form_errors(registerForm.firstname) }}</span>
                    </div>

                    <div class ="col-6">
                        {{ form_widget(registerForm.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Surname'}}) }}
                        <span class="text-danger" style="font-size:12px;">{{ form_errors(registerForm.lastname) }}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        {{ form_widget(registerForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                        <span class="text-danger" style="font-size:12px;">{{ form_errors(registerForm.email) }}</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        {{ form_widget(registerForm.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                        <span class="text-danger" style="font-size:12px;">{{ form_errors(registerForm.password.first) }}</span>
                    </div>

                    <div class="col-6">
                        {{ form_widget(registerForm.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Password Repeat'}}) }}
                        <span class="fs-6 text-danger">{{ form_errors(registerForm.password.second)  }}</span>
                    </div>
                </div>
                <input type="hidden" name="state" value="register">
                <button type="submit">Sign Up</button>
                {{ form_end(registerForm) }}
            </form>

        </div>

        
        <div class="form-container sign-in">
            <form method="post" novalidate>
                {{ form_start(loginForm) }}
                <h2>Se connecter</h2>
                {% if error %}
                    <p>{{ error }}</p>
                {% endif %}

                {% if success %}
                    <p>{{ success }}</p>
                {% endif %}

                    {{ form_widget(loginForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    {{ form_errors(loginForm.email) }}

                    {{ form_widget(loginForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    {{ form_errors(loginForm.password) }}
                <input type="hidden" name="state" value="login">        
                <button type="submit" class="btn btn-primary">Se Connecter</button>
                {{ form_end(loginForm) }}
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <img src="{{ asset('images/blog.png') }}" class="logo" alt="logo" width="70%" height="50%">
                    <p>Saisissez vos données personnelles pour utiliser toutes les fonctionnalités du site</p>
                    <button class="hidden" id="login">Se connecter</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <img src="{{ asset('images/blog.png') }}" class="logo" alt="logo" width="70%" height="50%">
                    <p>Enregistrez-vous avec vos données personnelles pour utiliser toutes les fonctionnalités du site</p>
                    <button class="hidden" id="register">Créer un compte</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="{{ asset('scripts/scriptLogin.js') }}"></script>
</body>